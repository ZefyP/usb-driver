vector predefinedLoads = {0, 80, 100, 120}

bool useVector;

int min;
int max;
int step;


// Explanation
if( useVector )
{
    min = 0;
    max = predefinedLoads.size() -1
    step = 1
}

int LOAD;

for ( int index = min; index <= max; index += step) 
{
    if(useVector)
    {
        LOAD = predefinedLoads[index]
    }
    else 
    {
        LOAD = index;
    }
    
    // blablabla     
}